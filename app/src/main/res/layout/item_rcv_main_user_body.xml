<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/item_main_user_body_main">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_main_user_body_cv_avt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/teal_700"
        app:cardCornerRadius="300dp">

        <ImageView
            android:id="@+id/item_main_user_body_img_avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_main_user_body_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_main_user_body_cv_avt"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_main_user_body_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_main_user_body_tv_name"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-20dp"
        android:layout_toRightOf="@+id/item_main_user_body_cv_avt"
        android:text="" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_main_user_body_cv_seen"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:backgroundTint="#2196F3"
        app:cardCornerRadius="300dp" />

</RelativeLayout>