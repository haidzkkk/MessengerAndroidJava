<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chat_you_cv_avata"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:cardCornerRadius="300dp"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/item_chat_you_img_avata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_chat_you_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_chat_you_cv_avata"
        android:maxWidth="250dp"
        android:background="@drawable/shape_chat_you"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="sdsdsadsadasdsadsdsadsadasdsadsdsadsadasdsad"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:visibility="gone"
      />

    <ImageView
        android:id="@+id/item_chat_you_img_message"
        android:visibility="gone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/item_chat_you_cv_avata"
        android:scaleType="centerCrop"
        android:src="@drawable/meo" />


</RelativeLayout>